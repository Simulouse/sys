<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sim.sys.dao.AdminDao">

    <resultMap type="com.sim.sys.entity.Admin" id="adminMap">
        <result property="account" column="account" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="adminMap">
        select
          account, password
        from medicine_management.tb_admin
        where account = #{account}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="adminMap">
        select
          account, password
        from medicine_management.tb_admin
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="adminMap">
        select
        account, password
        from medicine_management.tb_admin
        <where>
            <if test="account != null and account != ''">
                and account = #{account}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="account" useGeneratedKeys="true">
        insert into medicine_management.tb_admin(password)
        values (#{password})
    </insert>

    <insert id="insertBatch" keyProperty="account" useGeneratedKeys="true">
        insert into medicine_management.tb_admin(password)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.password})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="account" useGeneratedKeys="true">
        insert into medicine_management.tb_admin(password)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.password})
        </foreach>
        on duplicate key update
        password = values(password)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update medicine_management.tb_admin
        <set>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
        </set>
        where account = #{account}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from medicine_management.tb_admin where account = #{account}
    </delete>

</mapper>

