<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sim.sys.dao.DeliveryMedicineDao">

    <insert id="insertDeliveryMedicine">
        insert into delivery_medicine (delivery_id, medicine_id, nums) values
        <foreach collection="records" separator="," item="record">
            (#{record.deliveryId}, #{record.medicine.medicineId})
        </foreach>
    </insert>

    <delete id="deleteDeliveryMedicine">
        delete from delivery_medicine
        where delivery_medicine.delivery_id = #{deliveryId}
    </delete>

</mapper>

