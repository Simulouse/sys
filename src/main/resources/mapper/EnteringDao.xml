<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sim.sys.dao.EnteringDao">

    <resultMap type="com.sim.sys.entity.Entering" id="enteringMap">
        <result property="orderId" column="order_id" jdbcType="VARCHAR"/>
        <result property="enteringTime" column="entering_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="enteringMap">
        select
            order_id, entering_time
        from medicine_management.tb_entering
        where order_id = #{orderId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="enteringMap">
        select
            order_id, entering_time
        from medicine_management.tb_entering
                 limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="enteringMap">
        select
        order_id, entering_time
        from medicine_management.tb_entering
        <where>
            <if test="orderId != null and orderId != ''">
                and order_id = #{orderId}
            </if>
            <if test="enteringTime != null">
                and entering_time = #{enteringTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="orderId" useGeneratedKeys="true">
        insert into medicine_management.tb_entering(order_id , entering_time)
        values (#{orderId},#{enteringTime})
    </insert>

    <insert id="insertBatch" keyProperty="orderId" useGeneratedKeys="true">
        insert into medicine_management.tb_entering(entering_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.enteringTime})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="orderId" useGeneratedKeys="true">
        insert into medicine_management.tb_entering(entering_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.enteringTime})
        </foreach>
        on duplicate key update
        entering_time = values(entering_time)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update medicine_management.tb_entering
        <set>
            <if test="enteringTime != null">
                entering_time = #{enteringTime},
            </if>
        </set>
        where order_id = #{orderId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from medicine_management.tb_entering where order_id = #{orderId}
    </delete>

</mapper>

