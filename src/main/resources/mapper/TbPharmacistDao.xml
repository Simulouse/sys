<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sim.sys.dao.TbPharmacistDao">

    <resultMap type="com.sim.sys.entity.TbPharmacist" id="TbPharmacistMap">
        <result property="pharmacistId" column="pharmacist_id" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="verifyUser" resultMap="BaseResultMap" parameterType="java.lang.String">
        select * from tb_user where accountid=#{account} and password=#{password}
    </select>

    <!--查询单个-->
    <select id="queryById" resultMap="TbPharmacistMap">
        select
          pharmacist_id, password, name
        from medicine_management.tb_pharmacist
        where pharmacist_id = #{pharmacistId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TbPharmacistMap">
        select
          pharmacist_id, password, name
        from medicine_management.tb_pharmacist
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TbPharmacistMap">
        select
        pharmacist_id, password, name
        from medicine_management.tb_pharmacist
        <where>
            <if test="pharmacistId != null and pharmacistId != ''">
                and pharmacist_id = #{pharmacistId}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="pharmacistId" useGeneratedKeys="true">
        insert into medicine_management.tb_pharmacist(password, name)
        values (#{password}, #{name})
    </insert>

    <insert id="insertBatch" keyProperty="pharmacistId" useGeneratedKeys="true">
        insert into medicine_management.tb_pharmacist(password, name)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.password}, #{entity.name})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="pharmacistId" useGeneratedKeys="true">
        insert into medicine_management.tb_pharmacist(password, name)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.password}, #{entity.name})
        </foreach>
        on duplicate key update
        password = values(password) , name = values(name)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update medicine_management.tb_pharmacist
        <set>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
        </set>
        where pharmacist_id = #{pharmacistId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from medicine_management.tb_pharmacist where pharmacist_id = #{pharmacistId}
    </delete>

</mapper>

