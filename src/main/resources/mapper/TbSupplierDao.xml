<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sim.sys.dao.TbSupplierDao">

    <resultMap type="com.sim.sys.entity.TbSupplier" id="TbSupplierMap">
        <result property="supplierId" column="supplier_id" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TbSupplierMap">
        select
          supplier_id, name
        from medicine_management.tb_supplier
        where supplier_id = #{supplierId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TbSupplierMap">
        select
          supplier_id, name
        from medicine_management.tb_supplier
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TbSupplierMap">
        select
        supplier_id, name
        from medicine_management.tb_supplier
        <where>
            <if test="supplierId != null and supplierId != ''">
                and supplier_id = #{supplierId}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="supplierId" useGeneratedKeys="true">
        insert into medicine_management.tb_supplier(name)
        values (#{name})
    </insert>

    <insert id="insertBatch" keyProperty="supplierId" useGeneratedKeys="true">
        insert into medicine_management.tb_supplier(name)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="supplierId" useGeneratedKeys="true">
        insert into medicine_management.tb_supplier(name)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name})
        </foreach>
        on duplicate key update
        name = values(name)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update medicine_management.tb_supplier
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
        </set>
        where supplier_id = #{supplierId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from medicine_management.tb_supplier where supplier_id = #{supplierId}
    </delete>

</mapper>

